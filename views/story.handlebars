<div class="justify-content-center text-center">
  <div class="container storyBox">
    <h2 class="singleStory">{{story.title}}</h2>
    <img src="../images/{{story.image}}" style="max-width:90%">
    <br>
    <br>
    {{story.content}}
    <div>
      <br>
      <p>Submitted By:</p>
      <h2 class="text-warning">{{{get_emoji}}} {{story.user.username}}</h2>
      {{#each story.tags}}
      {{name}}
      {{/each}}
    </div>
  </div>
  <div class="container storyBox">
    <div>
      
      <section>
        <div>
          <h3 class="singleStory">Comments</h3>
        </div>

        <div class="container profileBox">
          <form id="new-comment-form" class="card-body">
            <input type="hidden" name="story-id" value="{{story.id}}" />
            <label class="form-label">Add New Comment</label>
            <br>
            <textarea type="text" name="comment-description" class="form-input storyInput"></textarea>
            <br>
            <button class="btn login-btn" type="submit">ADD COMMENT</button>
          </form>
        </div>

        <div>
          {{#each story.comments}}
          <div>
            <p>{{description}}</p>
          </div>
          {{/each}}
          <p class="card-text"><small class="text-muted">Created by: {{story.username}}</small></p>
        </div>
      </section>
    
    </div>
  </div>
</div>
<script src="/js/comments.js"></script>