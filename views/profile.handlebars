<h2>User Profile</h2>
<div>
    {{!-- PROFILE IMG AND USERNAME SIDE PANEL --}}
    <div>
        <img/>
        <h3>{{users.username}}</h3>
    </div>
    {{!-- STORY SECTION WITH ADD/EDIT BTNs --}}
    {{#each stories}}
    <div>
        <div>
            {{!-- STORY DISPLAYED --}}
            <h4>{{title}}</h4>
            {{!-- EDIT STORY BTN (Font Awesome Icon) --}}
            <button class="btn btn-warning" type="submit">EDIT <i class='fas fa-ghost'></i> STORY</button>
        </div>
    </div>
    {{/each}}
        <button class="btn btn-light" type="submit">ADD <i class='fas fa-ghost'></i> STORY</button>
</div>
<div class="post card">
  <div class="card-header">
    <h2>Create New Post</h2>
  </div>
  <form id="new-post-form" class="card-body">
    <label class="form-label" for="post-title">Title</label>
    <input type="text" name="post-title" class="form-input" />

    <label class="form-label" for="post-body">Content</label>
    <textarea name="post-body" class="form-input"></textarea>

    <button type="submit" class="btn">Create</button>
  </form>
</div>

