
  {{#each stories as |story|}}
  <a href= "/story/{{story.id}}"><div class="card mb-3 homepageCard h-100">
    <div class="row no-gutters">
      <div class="col-md-4">
        <img src="../images/playground.jpeg" class="card-img" alt="playground">
      </div>
      <div class="col-md-8 ">
        <div class="card-body">
          <h3 class="card-title singleStory">{{story.title}}</h3>
          <p class="card-text">{{story.content}}</p>
    
          <p class="card-text"><small class="text-muted">Created by: {{story.user.username}}</small></p>
        </div>
      </div>
    </div>
  </div> </a>
    {{/each}}


