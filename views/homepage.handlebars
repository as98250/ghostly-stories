
  {{#each stories as |story|}}
  <a href= "/story/{{story.id}}"><div class="card mb-3 homepageCard h-100">
    <div class="row no-gutters">
      <div class="col-md-4 d-flex align-items-center" style="max-height: 300px">
        <img src="../images/{{story.image}}" class="card-img" alt="playground">
      </div>
      <div class="col-md-8 homeCards">
        <div class="card-body">
          <h2 class="card-title singleStory">{{story.title}}</h2>
          <p class="card-text homeText">{{story.content}}</p>
          <p>CLICK TO READ MORE</p>
    
          <p class="card-text"><small class="text-muted">Created by: {{story.user.username}}</small></p>
        </div>
      </div>
    </div>
  </div> </a>
    {{/each}}


