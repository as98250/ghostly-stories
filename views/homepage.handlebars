
  {{#each stories as |story|}}
  <div class="card mb-3">
    <div class="row no-gutters">
      <div class="col-md-4">
        <img src="../images/playground.jpeg" class="card-img" alt="playground">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">{{story.title}}</h5>
          <p class="card-text">This is text for the content...</p>
          
          <p class="card-text"><small class="text-muted">Created by: {{story.user.username}}</small></p>
        </div>
      </div>
    </div>
  </div>
  <div>
    {{/each}}
    <h2>Recommended Topics</h2>
  </div>


